/* pages/classes/index.wxss */
.content {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.c-item:first-child {
  width: 33%;
  background: #8b94a78c;
  position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
  left: 0; 
}

.c-item:last-child {
  width: 66.6%;
  overflow: hidden;
  position: absolute;
  right: 0;
}

.c-title-list {
  border-radius: 20rpx;
  vertical-align: middle;
  height: 115rpx;
  width: 250rpx;
  text-shadow: beige;
  line-height: 60rpx;
  border-bottom: 1px solid #e9e9e9;
  color: rgb(0, 0, 0);

  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}

.c-title-list-active {
  overflow: visible;
  background: #535353;
  color: #fff;
}

.types {
  display: flex;
  flex-direction: row;
  height: 160rpx;
  padding: 0 0 20rpx 0;
}

.type:first-child {
  width: calc(28% - 10rpx);
  margin-right: 10rpx;
  margin: 0 10rpx 20rpx 0;
  background: #efefef;
  text-align: center;
  line-height: 160rpx;
  color: #ddd;
}

.type:last-child {
  width: 72%;
  border-bottom: 1px solid #efefef;
  padding: 10rpx 0;
}
.type-name{
  color: #666;
  margin-bottom: 10rpx;
}
.type-summary{
  font-size: 12px;
  color: #999;
}

.text-shadow  {
  /* h-shadow 水平阴影的位置 v-shadow 垂直阴影的位置 blur 模糊的距离 color 阴影的颜色; */
 text-shadow: 3px 3px 4px rgba(55, 150, 204, 0.2);
}
.main_container{
  overflow: hidden;
}

.module-scroll-view{
  white-space: nowrap;
  height: 1300rpx;
  margin-top: 30rpx;
}
.module-scroll-view .item-navigator{
  display: inline-block;
}