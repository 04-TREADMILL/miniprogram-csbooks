/* pages/classes/index.wxss */
.content {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.c-item:first-child {
  width: 33.4%;
  margin-right: 40rpx;
  background: #2e4644;
  position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
  left: 0; 
}

.c-item:last-child {
  width: 66.6%;
  overflow: auto;
  position: absolute;
  right: 0;
}

.c-title-list {
  vertical-align: middle;
  text-align: center;
  height: 115rpx;
  width: 250rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #e9e9e9;
  color: rgb(252, 250, 247);

}

.c-title-list-active {
  background: #61e3ec;
  color: #fff;
}

.types {
  display: flex;
  flex-direction: row;
  height: 160rpx;
  padding: 0 0 20rpx 0;
}

.type:first-child {
  width: calc(28% - 10rpx);
  margin-right: 10rpx;
  margin: 0 10rpx 20rpx 0;
  background: #efefef;
  text-align: center;
  line-height: 160rpx;
  color: #ddd;
}

.type:last-child {
  width: 72%;
  border-bottom: 1px solid #efefef;
  padding: 10rpx 0;
}
.type-name{
  color: #666;
  margin-bottom: 10rpx;
}
.type-summary{
  font-size: 12px;
  color: #999;
}
