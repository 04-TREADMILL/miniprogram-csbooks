/* pages/detail/detail.wxss */

.container {
  padding: 0;
}
.content{
  padding: 20rpx 30rpx;
  font-size: 16px;
  color: #333;
  text-align: justify;
  height: 100%;
}
.navigation {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  font-size: 16px;
}

.nav-item {
  flex-grow: 1;
  text-align: center;
}
.nav-border{
  border-left: 1px solid #eee;
}
.nav-active {
  background: #4796ff;
  color: #fff;
}

.img{
  width:400rpx;
  height:400rpx;
  display:flex;                  
  justify-content: center;        
  align-items:center; 
  height: 100%;               
}

.intro {
  background-color:darkseagreen;
  display:flex;                  
  justify-content: center;        
  align-items:center; 
  height: 100%;  
}