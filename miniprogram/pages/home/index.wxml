<!--pages/home/index.wxml-->
<wxs src="../../wxs/subhelper.wxs" module="tools"/>

<view class="homePage">
<view class="search">
    <navigator target="self" url="/pages/search/index" open-type="navigate">
        <l-search-bar placeholder="搜索" bg-color="#eeeeee" shape="circle" cancel-text="搜索"/>
    </navigator>
</view>

    <view class='card_1'>
                <view catchtap="readBook"data-bookName='{{SwiperList[0].Name}}' 
                data-bookImg='{{SwiperList[0].ImageUrl}}'
                data-bookContent='{{SwiperList[0].Description}}' >
                    <l-card type="primary" 
                    full="{{true}}"
                    image="{{SwiperList[0].ImageUrl}}"
                    title="{{SwiperList[0].Name}}">
                        <view class="content">
                        {{tools.sub(SwiperList[0].Description)}}
                        </view>
                    </l-card>
                </view>
    </view>
