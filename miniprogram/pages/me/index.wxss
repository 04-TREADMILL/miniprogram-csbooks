/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(19, 16, 16);
  font-size: medium;
  font-style: inherit;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: 60rpx;
}

.button {
  margin-top: 70rpx;
  font-size: large;
  width: 30px;
}

.anonymous-avatar {
  margin-top: 200rpx;
  text-align: center;
}

.list {
  margin-left: 40rpx;
  height: 50rpx;
}

.list-icon {
  width: 20rpx;
  height: 40rpx;
}

.list-text {
  font-size: 40rpx;
  font-style: initial;
  margin-left: 20rpx;
}

.content {
  margin-top: 60rpx;
}